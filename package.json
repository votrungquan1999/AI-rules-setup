{
  "name": "ai-rules-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "A command-line tool that helps developers pull curated AI agent rules from a centralized repository into their projects",
  "workspaces": [
    "cli-package"
  ],
  "scripts": {
    "------------ DEV COMMANDS ------------": "",
    "dev": "tsx src/cli/index.ts",
    "dev:api": "next dev",
    "------------ BUILD COMMANDS ------------": "",
    "build": "tsc",
    "build:api": "next build",
    "start:api": "next start",
    "------------ TEST COMMANDS ------------": "",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "------------ LINT COMMANDS ------------": "",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "------------ QUESTION GENERATION ------------": "",
    "generate-questions": "tsx src/cli/commands/generate-questions.ts",
    "------------ PUBLISH COMMANDS ------------": "",
    "build:cli": "tsc -p tsconfig.cli.json",
    "publish:cli": "cd cli-package && npm publish --access public",
    "prepublish:cli": "npm run build:cli"
  },
  "author": "Vo Trung Quan",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/votrungquan1999/AI-rules-setup.git"
  },
  "homepage": "https://github.com/votrungquan1999/AI-rules-setup#readme",
  "bugs": {
    "url": "https://github.com/votrungquan1999/AI-rules-setup/issues"
  },
  "dependencies": {
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.3",
    "chalk": "^5.3.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "commander": "^11.1.0",
    "execa": "^8.0.1",
    "fuse.js": "^7.1.0",
    "inquirer": "^9.2.12",
    "lucide-react": "^0.546.0",
    "mongodb": "^6.20.0",
    "nanoid": "^5.1.6",
    "next": "^16.0.0-canary.10",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "stopword": "^3.1.5",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.6",
    "@tailwindcss/cli": "^4.1.15",
    "@tailwindcss/postcss": "^4.1.15",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/stopword": "^2.0.3",
    "@vitest/coverage-v8": "^1.0.0",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.15",
    "tsx": "^4.6.0",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  }
}
